@model List<PhotoSocialNetwork.ViewModels.PostViewModel>;

@inject PhotoSocialNetwork.Models.Storage.IStorage storage;
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="col-md-6 col-md-offset-3 profileWrap">
    <div class="text-center">
        <h2>My Feed</h2>
    </div>

    <div class="col-md-12" style="padding: 10px">
        <div class="text-center">
            <a asp-action="CreatePost" asp-controller="Feed">
                <button class="btn btn-theme btn-block" type="button"><i class="fa fa-lock"></i>Create Post</button>
            </a>
        </div>
    </div>

    @await Component.InvokeAsync("PhotoSocialNetwork.ViewComponents.Feed.Posts", new { userId = storage.GetUserId(User.Identity.Name) })

</div>


<script>
    $(document).ready(function () {
        $("#reviewsSub").css("background", "#47a7cc")
        $("#reviewsText").css("color", "white")
    })
</script>


