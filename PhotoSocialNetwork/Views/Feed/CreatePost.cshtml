@model PhotoSocialNetwork.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Create Post";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="col-md-6 col-md-offset-3 profileWrap">
    <div class="text-center">
        <h2>Create Post</h2>
    </div>

    <div class="row">
        <form asp-action="CreatePost" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <div>
                    <img id="posterImage" asp-for="PhotoPath" style='width: 400px; height: 400px; object-fit: contain; display: block; margin: 0 auto;'>
                </div>
                <div class="centerButtonContainer" style="margin: 15px">
                    <input type="file" id="selectedFile" style="display: none;" name="photo" accept="image/*" />
                    <input class="btn-theme" type="button" onclick="document.getElementById('selectedFile').click();" title="Update picture" value="Update picture">
                </div>
            </div>
            <div class="form-group">
                <div class="reviewInputContainer">
                    <textarea asp-for="Text" id="postText" rows="4" class="reviewInput"></textarea>
                </div>
            </div>
            <div class="form-group centerButtonContainer">
                <input type="submit" value="Create post" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#posterImage').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#selectedFile").change(function () {
            readURL(this);
        });
    </script>


