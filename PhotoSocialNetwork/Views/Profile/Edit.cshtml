@model PhotoSocialNetwork.ViewModels.ProfileModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

<div class="col-md-6 col-md-offset-3 profileWrap">
    <div class="text-center">
        <h2>Change Profile Info</h2>
    </div>

    <hr />
    <div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"><b>NAME:</b></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"><b>EMAIL:</b></label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"><b>DATE OF BIRTH:</b></label>
                <input asp-for="DateOfBirth" type="date" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="profileInfo">
                <div class="leftProfile">
                    <input type="submit" style="width: 100px" value="Save" class="btn btn-theme btn-block" />
                </div>
                <div class="form-group">
                    <a asp-action="Index" asp-controller="Profile">
                        <input type="button" style="width: 100px" value="Cancel" class="btn btn-theme btn-block" />
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function() {
        $("#profileImg").css("background", "#47a7cc")
    })
</script>

